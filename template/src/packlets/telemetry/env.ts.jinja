import { z } from 'zod';

// eslint-disable-next-line @typescript-eslint/typedef
export const env = z
  .object({
    SERVICE_NAME: z.string().default('{{ project_slug }}'),
    LOKI_URL: z.string().optional(),
    LOKI_BASIC_AUTH: z.string().optional(),

    PUSHGATEWAY_URL: z
      .string()
      .url()
      .optional()
  })
  .parse(process.env);
